{
    "manifest_version": 2,

    "name": "Nope",
    "description": "This is a productivity tool to stop you from procrastinating on designated websites.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "nope.html"
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["js/content.js"],
            "run_at": "document_start"
        }
    ],

    "background": {
        "scripts": ["js/background.js"]
    },

    "permissions": [
        "tabs",
        "storage",
        "*://*/*"
    ]
}
